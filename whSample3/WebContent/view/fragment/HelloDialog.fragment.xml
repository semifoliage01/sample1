<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="helloDialog"
      title ="Hello {/recipient/name}">
      <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
      </content>
      <beginButton>
      	<Button
            text="{i18n>dialogSubmitButtonText}"
            press=".onCloseDialog"/>
       </beginButton>
       <endButton>
        <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      	</endButton>
   </Dialog>
</core:FragmentDefinition>